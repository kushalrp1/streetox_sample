<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:background="@color/bottom_sheet_color"
    android:backgroundTint="@color/bottom_sheet_color"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:backgroundTint="@color/bottom_sheet_color"
        android:layout_marginVertical="@dimen/_12sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/delivery_placeholder"/>
        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">



    <TextView
        android:id="@+id/request_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#5248581232"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/radio_canada"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/request_main_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="main message"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/radio_canada"
        android:textColor="@color/white"/>

</LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/request_btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="@dimen/_6sdp"
        android:backgroundTint="@color/streetox_primary_color">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_4sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="map"
                android:textColor="@color/black"
                android:fontFamily="@font/radio_canada"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:textSize="@dimen/_8ssp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>