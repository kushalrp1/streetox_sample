<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:background="@color/bottom_sheet_color"
    android:backgroundTint="@color/bottom_sheet_color"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:backgroundTint="@color/bottom_sheet_color"
        android:layout_marginVertical="@dimen/_12sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/noti_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="noti_id"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/location_placeholder"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/in_area_main_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="main message"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/radio_canada"
                android:textColor="@color/white"/>



                <TextView
                    android:id="@+id/in_area_to_location"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/_200sdp"
                    android:text="to where"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily= "@font/public_sans"/>

            <TextView
                android:id="@+id/in_area_notification_time"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:text="time"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:fontFamily= "@font/radio_canada"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">
            <ImageView
                android:id="@+id/circle"
                android:layout_width="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="right|end"
                android:src="@drawable/yellow_circle" />
        </LinearLayout>



    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="@dimen/_6sdp"
        android:backgroundTint="@color/streetox_primary_color">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_4sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to oxbox"
                android:textColor="@color/black"
                android:fontFamily="@font/radio_canada"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:textSize="@dimen/_7ssp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</androidx.cardview.widget.CardView>